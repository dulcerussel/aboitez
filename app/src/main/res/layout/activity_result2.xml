<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="60dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Household Income"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="15dp" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="9dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="25sp"
                android:text="Total Computation"
                android:layout_marginTop="15dp" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="33dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="Gross Household Income:"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="19dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="Gross Household Expenses:"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                android:text="Net Household Income:"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Household Expenses"
                android:textSize="25sp"
                android:paddingLeft="55dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="15dp" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:textSize="20sp"
                android:text="Gross Personal Expenses:"
                android:textColor="#000000"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35dp"
                android:textSize="20sp"
                android:text="Family Location and Size:"
                android:textColor="#000000"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="Household Expenses(Projected):"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:paddingLeft="55dp"
                android:paddingTop="80dp">

                <Button
                    android:id="@+id/btnsave3"
                    android:layout_width="119dp"
                    android:layout_height="59dp"
                    android:layout_margin="15dp"

                    android:text="Save"></Button>

                <Button
                    android:id="@+id/btnTotalCom"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_margin="15dp"

                    android:text="T-Compute"></Button>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>